<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dennis.whatistheweather.MainActivity"
    android:background="@drawable/isaac">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a City..."
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:textColor="#FFFF"
        android:textSize="40sp"
        android:id="@+id/enter_a_city"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_a_city"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:id="@+id/edit_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text"
        android:layout_centerHorizontal="true"
        android:text="What's the Weather?"
        android:id="@+id/weather_button"
        android:onClick="findWeather"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_button"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:id="@+id/display_result"
        android:textColor="#FFF"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
