<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF7DA"
        android:padding="16dp"
        tools:context="com654.example.android.image_editor.MainActivity">


        <Button
            android:id="@+id/btn_clr_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:minHeight="20dp"
            android:text="Clear All"
            android:textSize="14sp"
            android:background="#FD8E09"/>

        <Button
            android:id="@+id/btn_save_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_clr_all"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/btn_clr_all"
            android:layout_toRightOf="@+id/btn_clr_all"
            android:minHeight="20dp"
            android:text="Save Image"
            android:textSize="14sp"
            android:background="#FD8E09"/>


        <ImageView
            android:id="@+id/img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/ed_txt"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/ed_txt"
            android:layout_below="@+id/ed_txt"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/direction_jpg"
            android:scaleType="fitXY"/>

        <EditText
            android:id="@+id/ed_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignBaseline="@id/btn_save_image"
            android:layout_toLeftOf="@+id/btn_clr_all"
            android:layout_toStartOf="@+id/btn_clr_all"
            android:hint="My text"
            android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FD8E09"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_camera_white_24dp"
            android:id="@+id/img_button"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_library_white_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/img_button"
            android:id="@+id/library_F"/>

    </RelativeLayout>



</RelativeLayout>


